{
    "manifest_version": 3,
    "name": "Монитор страницы",
    "version": "1.0",
    "description": "Перезагружает страницу и проверяет наличие определенных тегов",
    "permissions": [
      "activeTab",
      "storage",
      "tabs"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }